<tr>
  <td>
    <%= image_tag product.image.tiny.url %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= item.item_price_cents / 100.00 %>
  </td>
  <td>
    <%= quantity %>
  </td>
  <td>
    <%= item.total_price_cents / 100.00 %>
  </td>
</tr>
